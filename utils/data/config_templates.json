{
  "cisco_ios": {
    "base_template": [
      "hostname {{hostname}}",
      "!",
      "ip domain-name example.com",
      "!",
      "service password-encryption",
      "!",
      "enable secret {{enable_password}}",
      "!",
      "username {{admin_username}} privilege 15 secret {{admin_password}}",
      "!",
      "ip ssh version 2",
      "!",
      "line vty 0 4",
      " transport input ssh",
      " login local",
      "!",
      "no ip http server",
      "no ip http secure-server",
      "!"
    ],
    "interface_template": [
      "interface {{interface_name}}",
      " description {{description}}",
      " ip address {{ip_address}} {{subnet_mask}}",
      " no shutdown",
      "!"
    ],
    "acl_template": [
      "ip access-list extended {{acl_name}}",
      "{{#each acl_rules}}",
      " {{this}}",
      "{{/each}}",
      "!"
    ],
    "routing_template": [
      "{{#if use_ospf}}",
      "router ospf {{process_id}}",
      " network {{network}} {{wildcard}} area {{area}}",
      " passive-interface default",
      "{{#each active_interfaces}}",
      " no passive-interface {{this}}",
      "{{/each}}",
      "!",
      "{{/if}}",
      "{{#if use_static_routes}}",
      "{{#each static_routes}}",
      "ip route {{network}} {{mask}} {{next_hop}}",
      "{{/each}}",
      "{{/if}}"
    ],
    "ntp_template": [
      "ntp server {{ntp_server}}",
      "!"
    ],
    "logging_template": [
      "logging buffered 16384",
      "logging console informational",
      "{{#each syslog_servers}}",
      "logging host {{this}}",
      "{{/each}}",
      "!"
    ],
    "security_template": [
      "{{#if aaa_new_model}}",
      "aaa new-model",
      "aaa authentication login default local",
      "aaa authorization exec default local",
      "{{/if}}",
      "!",
      "login block-for 120 attempts 3 within 60",
      "!",
      "{{#each banner_lines}}",
      "{{this}}",
      "{{/each}}"
    ],
    "snmp_template": [
      "{{#if enable_snmp}}",
      "snmp-server community {{read_community}} RO",
      "snmp-server location {{location}}",
      "snmp-server contact {{contact}}",
      "{{/if}}"
    ]
  },
  "cisco_asa": {
    "base_template": [
      "hostname {{hostname}}",
      "domain-name example.com",
      "!",
      "enable password {{enable_password}} encrypted",
      "!",
      "username {{admin_username}} password {{admin_password}} encrypted privilege 15",
      "!",
      "aaa authentication ssh console LOCAL",
      "!",
      "ssh {{internal_network}} {{internal_netmask}} inside",
      "ssh timeout 15",
      "!",
      "http server enable",
      "http {{internal_network}} {{internal_netmask}} inside"
    ],
    "interface_template": [
      "interface {{interface_name}}",
      " nameif {{nameif}}",
      " security-level {{security_level}}",
      " ip address {{ip_address}} {{subnet_mask}}",
      "!"
    ],
    "acl_template": [
      "access-list {{acl_name}} extended {{acl_type}}",
      "{{#each acl_rules}}",
      " {{this}}",
      "{{/each}}",
      "access-group {{acl_name}} {{direction}} interface {{interface}}"
    ],
    "nat_template": [
      "{{#if use_nat}}",
      "object network {{object_name}}",
      " subnet {{network}} {{netmask}}",
      "{{#if use_pat}}",
      "nat ({{inside_interface}},{{outside_interface}}) dynamic interface",
      "{{else}}",
      "nat ({{inside_interface}},{{outside_interface}}) static {{translated_address}}",
      "{{/if}}",
      "{{/if}}"
    ],
    "security_template": [
      "policy-map global_policy",
      " class inspection_default",
      "  inspect icmp",
      "  inspect http",
      "  inspect https",
      "  inspect ssh",
      "!",
      "service-policy global_policy global"
    ]
  },
  "juniper_junos": {
    "base_template": [
      "system {",
      "    host-name {{hostname}};",
      "    root-authentication {",
      "        encrypted-password \"{{root_password}}\";",
      "    }",
      "    login {",
      "        user {{admin_username}} {",
      "            uid 2000;",
      "            class super-user;",
      "            authentication {",
      "                encrypted-password \"{{admin_password}}\";",
      "            }",
      "        }",
      "    }",
      "    services {",
      "        ssh;",
      "        netconf {",
      "            ssh;",
      "        }",
      "    }",
      "    syslog {",
      "        user * {",
      "            any emergency;",
      "        }",
      "        file messages {",
      "            any notice;",
      "            authorization info;",
      "        }",
      "        file interactive-commands {",
      "            interactive-commands any;",
      "        }",
      "    }",
      "}"
    ],
    "interface_template": [
      "interfaces {",
      "    {{interface_name}} {",
      "        description \"{{description}}\";",
      "        unit 0 {",
      "            family inet {",
      "                address {{ip_address}}/{{prefix_length}};",
      "            }",
      "        }",
      "    }",
      "}"
    ],
    "firewall_template": [
      "firewall {",
      "    filter {{filter_name}} {",
      "        term allow-trusted {",
      "            from {",
      "                source-address {",
      "                    {{trusted_network}}/{{trusted_prefix}};",
      "                }",
      "            }",
      "            then accept;",
      "        }",
      "        term block-rest {",
      "            then {",
      "                reject;",
      "                log;",
      "            }",
      "        }",
      "    }",
      "}"
    ],
    "routing_template": [
      "routing-options {",
      "    static {",
      "        {{#each static_routes}}",
      "        route {{network}}/{{prefix}} next-hop {{next_hop}};",
      "        {{/each}}",
      "    }",
      "}"
    ],
    "security_template": [
      "security {",
      "    alarms {",
      "        potential-violation {",
      "            authentication failures;",
      "            login {",
      "                threshold 5;",
      "            }",
      "        }",
      "    }",
      "    ssh-known-hosts {",
      "        {{#each ssh_known_hosts}}",
      "        host {{this.host}} {",
      "            key \"{{this.key}}\";",
      "        }",
      "        {{/each}}",
      "    }",
      "}"
    ]
  }
}